{
  "description": "Auto-sync Claude Code config to GitHub on session end",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/backup-sync.sh\"",
            "timeout": 60,
            "async": true
          }
        ]
      }
    ]
  }
}
